<% layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h1>Edit Listing</h1>

            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">

                <div class="mb-3">
                    <label for="listing[title]">Title</label>
                    <input name="listing[title]" class="form-control" required value="<%= listing.title %>">
                    <div class="valid-feedback">Title looks GoodðŸ˜€</div>
                </div>

                <div class="mb-3">
                    <label for="listing[description]">Description</label>
                    <textarea name="listing[description]" class="form-control"
                        required><%= listing.description %></textarea>

                    <div class="invalid-feedback">description should be valid</div>
                </div>

                <div class="mb-3">
                    <label for="listing[image]">Image</label>
                    <input name="listing[image]" class="form-control" value="<%= listing.image %>">
                    <div class="invalid-feedback">Image should be valid</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="listing[price]">Price</label>
                        <input type="number" name="listing[price]" class="form-control" required
                            value="<%= listing.price %>">

                        <div class="invalid-feedback">Price should be valid</div>
                    </div>

                    <div class="mb-3 col-md-8 ">
                        <label for="listing[country]">Country</label>
                        <input name="listing[country]" class="form-control" required value="<%= listing.country %>">

                        <div class="invalid-feedback">Country should be valid</div>
                    </div>

                </div>
                <div class="mb-3">
                    <label for="listing[location]">Location</label>
                    <input name="listing[location]" class="form-control" required value="<%= listing.location %>">

                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <button class="btn btn-dark mt-3">Update</button>

                <br><br>
                <br><br>


            </form>
        </div>
    </div>